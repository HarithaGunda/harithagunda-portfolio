{
  "name": "harithagunda-portfolio",
  "version": "1.0.0",
  "description": "A webpage that covers Haritha Gunda profile",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\"",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imagemin": "imagemin img/* -o dist/img",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Profile website",
    "profile based portfolio project",
    "profile aka resume",
    "profile aka cv",
    "portfolio aka resume",
    "portfolio aka cv"
  ],
  "author": "Haritha Gunda",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "imagemin-cli": "^3.0.0",
    "lite-server": "^2.3.0",
    "node-sass": "^4.13.1",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.2",
    "usemin-cli": "^0.5.1"
  },
  "dependencies": {
    "bootstrap": "^4.0.0",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.12.9"
  },
  "homepage": "https://github.com/HarithaGunda/harithagunda-portfolio#readme",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/HarithaGunda/harithagunda-portfolio.git"
  }
}
